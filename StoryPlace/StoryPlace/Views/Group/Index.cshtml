@using StoryPlace.WebLib.Helpers.Functions
@using StoryPlace.WebLib.Helpers.HTML
@model StoryPlace.Web.ViewModels.Group.GroupListViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Groups</h2>

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Members</th>
        <th>Stories</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {

        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.UserCount
            </td>
            <td>
                @item.StoryCount
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Group", new { id = item.ID }, null)
            </td>
            <td>
                <a href="javascript:" actiontype="delete" controller="Group" action="Delete">Delete</a>
            </td>
            <td>
                @Html.ActionLink(StringHelpers.TogglabeTextValue(item.Joined, "UnJoin", "Join"), "Join", "Group", new { id = item.ID }, null)
            </td>
        </tr>
    }
</table>

<br/>

@Html.ActionLink("Create New Group","Edit","Group")

